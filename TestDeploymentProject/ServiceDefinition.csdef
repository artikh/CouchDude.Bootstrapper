<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="CouchDudeAzureBootstrapperTest" 
									 xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition">
  <WorkerRole name="TestWorker" vmsize="Small" enableNativeCodeExecution="true">
    <Imports>
      <Import moduleName="Diagnostics" />
      <Import moduleName="RemoteAccess" />
      <Import moduleName="RemoteForwarder" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="CouchDB.DatabasesToReplicate" />
      <Setting name="CouchDB.CouchDBDistributive" />
      <Setting name="CouchDB.CouchDBLuceneDistributive" />
      <Setting name="CouchDB.JreDistributive" />
      <Setting name="CouchDB.UseCloudDrive" />
      <Setting name="CouchDB.CloudDrive.BlobContainer" />
      <Setting name="CouchDB.CloudDrive.BlobName" />
      <Setting name="CouchDB.CloudDrive.BlobSize" />
      <Setting name="CouchDB.CloudDrive.ConnectionString" />
      <Setting name="CouchDB.CloudDrive.InitCache" />
      <Setting name="CouchDB.CloudDrive.CacheResourceName" />
    </ConfigurationSettings>
    <Endpoints>
      <InputEndpoint name="CouchDB" port="9980" protocol="tcp" />
      <InternalEndpoint name="UnusedInternal" port="88" protocol="http" />
    </Endpoints>
    <LocalResources>
      <LocalStorage name="CouchDB" sizeInMB="2048" cleanOnRoleRecycle="true" />
      <LocalStorage name="CouchDB.Temp" sizeInMB="2048" cleanOnRoleRecycle="true" />
      <LocalStorage name="CloudDriveCache" sizeInMB="1024" cleanOnRoleRecycle="false" />
    </LocalResources>
  </WorkerRole>
</ServiceDefinition>